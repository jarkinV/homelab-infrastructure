networks:
  proxy:
    external: true
  n8n-network:

x-default: &default
  restart: unless-stopped
  security_opt:
    - no-new-privileges:true

x-networks: &networks
  networks:
    - n8n-network

services:
  n8n:
    image: n8nio/n8n:latest
    container_name: n8n
    environment:
      - N8N_BASIC_AUTH_ACTIVE=true
      - N8N_BASIC_AUTH_USER=${N8N_USER}
      - N8N_BASIC_AUTH_PASSWORD=${N8N_PASSWORD}
      - GENERIC_TIMEZONE=${TZ}
      - NODE_FUNCTION_ALLOW_EXTERNAL=axios,qs
      - DB_TYPE=postgresdb
      - DB_POSTGRESDB_HOST=n8n-db
      - DB_POSTGRESDB_PORT=5432
      - DB_POSTGRESDB_DATABASE=n8n
      - DB_POSTGRESDB_USER=n8n
      - DB_POSTGRESDB_PASSWORD=${N8N_DB_PASSWORD}
      - N8N_HOST=n8n.${DOMAIN}
      - N8N_PROTOCOL=https
      - WEBHOOK_URL=https://n8n.${DOMAIN}/
      - N8N_LOG_LEVEL=info
      - N8N_METRICS=true
    volumes:
      - {{ n8n_base_dir }}/app:/home/node/.n8n
    labels:
      - "traefik.enable=true"
      - "traefik.docker.network=proxy"
      - "traefik.http.routers.n8n.entrypoints=https"
      - "traefik.http.routers.n8n.rule=Host(`n8n.${DOMAIN}`)"
      - "traefik.http.routers.n8n.tls=true"
      - "traefik.http.routers.n8n.tls.certresolver=cloudflare"
      - "traefik.http.routers.n8n.tls.domains[0].main=${DOMAIN}"
      - "traefik.http.routers.n8n.tls.domains[0].sans=*.${DOMAIN}"
      - "traefik.http.services.n8n.loadbalancer.server.port=5678"
    depends_on:
      db:
        condition: service_healthy
    <<: [*default]
    networks:
      - proxy
      - n8n-network

  db:
    image: postgres:15
    container_name: n8n-db
    environment:
      - POSTGRES_USER=n8n
      - POSTGRES_PASSWORD=${N8N_DB_PASSWORD}
      - POSTGRES_DB=n8n
    volumes:
      - {{ n8n_base_dir }}/db:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U n8n"]
      interval: 10s
      timeout: 5s
      retries: 5
    <<: [*default, *networks]
