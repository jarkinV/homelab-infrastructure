networks:
  proxy:
    external: true

services:
  homer:
    image: docker.io/b4bz/homer:latest
    container_name: homer
    volumes:
      - ${ASSETS_LOCATION}:/www/assets
    environment:
      - INIT_ASSETS=0  # Don't overwrite existing config
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.homer.entrypoints=https"
      - "traefik.http.routers.homer.rule=Host(`homer.${DOMAIN}`)"
      - "traefik.http.routers.homer.tls=true"
      - "traefik.http.routers.homer.tls.certresolver=cloudflare"
      - "traefik.http.routers.homer.tls.domains[0].main=${DOMAIN}"
      - "traefik.http.routers.homer.tls.domains[0].sans=*.${DOMAIN}"
      - "traefik.http.services.homer.loadbalancer.server.port=8080"
      - "traefik.docker.network=proxy"
    restart: unless-stopped
    security_opt:
      - no-new-privileges:true
    networks:
      - proxy
    user: "1000:1000"  # Run as non-root user